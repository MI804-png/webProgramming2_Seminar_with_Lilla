<div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card shadow">
                    <div class="card-header <%= isEdit ? 'bg-warning text-dark' : 'bg-success text-white' %>">
                        <h4 class="mb-0">
                            <i class="fas fa-<%= isEdit ? 'edit' : 'plus' %>"></i> 
                            <%= isEdit ? 'Edit' : 'Add New' %> Project
                        </h4>
                    </div>
                    <div class="card-body">
                        <% if (locals.error) { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle"></i> <%= error %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                        <% } %>

                        <form method="POST" action="<%= basePath %>/projects/<%= isEdit ? 'edit/' + project.id : 'add' %>">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="title" class="form-label fw-bold">Project Title: <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="title" name="title" 
                                           value="<%= locals.project ? project.title : '' %>" required>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="project_url" class="form-label fw-bold">Project URL:</label>
                                    <input type="url" class="form-control" id="project_url" name="project_url" 
                                           value="<%= locals.project ? project.project_url : '' %>" 
                                           placeholder="https://example.com/project">
                                    <small class="form-text text-muted">Link to live project or demo</small>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="description" class="form-label fw-bold">Description: <span class="text-danger">*</span></label>
                                <textarea class="form-control" id="description" name="description" rows="5" required><%= locals.project ? project.description : '' %></textarea>
                                <small class="form-text text-muted">Provide a detailed description of the project</small>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="technologies" class="form-label fw-bold">Technologies:</label>
                                    <input type="text" class="form-control" id="technologies" name="technologies" 
                                           value="<%= locals.project ? project.technologies : '' %>" 
                                           placeholder="Node.js, React, MySQL">
                                    <small class="form-text text-muted">Comma-separated list of technologies used</small>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="image_url" class="form-label fw-bold">Image URL:</label>
                                    <input type="url" class="form-control" id="image_url" name="image_url" 
                                           value="<%= locals.project ? project.image_url : '' %>" 
                                           placeholder="https://example.com/image.jpg">
                                    <small class="form-text text-muted">Link to project screenshot or thumbnail</small>
                                </div>
                            </div>

                            <% if (isEdit && locals.project) { %>
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i> 
                                <strong>Created:</strong> <%= new Date(project.created_at).toLocaleString() %>
                            </div>
                            <% } %>

                            <div class="d-flex justify-content-between">
                                <a href="<%= basePath %>/projects" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Back to Projects
                                </a>
                                <button type="submit" class="btn <%= isEdit ? 'btn-warning' : 'btn-success' %>">
                                    <i class="fas fa-<%= isEdit ? 'save' : 'plus' %>"></i> 
                                    <%= isEdit ? 'Save Changes' : 'Add Project' %>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <% if (locals.project && project.image_url) { %>
                <div class="card shadow mt-4">
                    <div class="card-header">
                        <strong>Image Preview</strong>
                    </div>
                    <div class="card-body text-center">
                        <img src="<%= project.image_url %>" alt="<%= project.title %>" class="img-fluid" style="max-height: 400px;">
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>
