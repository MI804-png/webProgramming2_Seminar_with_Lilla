<div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="fas fa-project-diagram"></i> Manage Projects</h2>
            <a href="<%= basePath %>/projects/add" class="btn btn-success">
                <i class="fas fa-plus"></i> Add New Project
            </a>
        </div>

        <% if (locals.success) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        <% } %>

        <% if (locals.error) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle"></i> <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        <% } %>

        <% if (projects && projects.length > 0) { %>
        <div class="row">
            <% projects.forEach(function(project) { %>
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <% if (project.image_url) { %>
                    <img src="<%= project.image_url %>" class="card-img-top" alt="<%= project.title %>" style="height: 200px; object-fit: cover;">
                    <% } else { %>
                    <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                        <i class="fas fa-image fa-3x text-light"></i>
                    </div>
                    <% } %>
                    <div class="card-body">
                        <h5 class="card-title"><%= project.title %></h5>
                        <p class="card-text text-muted small">
                            <%= project.description.length > 100 ? project.description.substring(0, 100) + '...' : project.description %>
                        </p>
                        <% if (project.technologies) { %>
                        <div class="mb-2">
                            <% project.technologies.split(',').forEach(function(tech) { %>
                            <span class="badge bg-info me-1"><%= tech.trim() %></span>
                            <% }); %>
                        </div>
                        <% } %>
                        <% if (project.project_url) { %>
                        <p class="mb-2">
                            <i class="fas fa-link"></i> 
                            <a href="<%= project.project_url %>" target="_blank" class="text-decoration-none">View Project</a>
                        </p>
                        <% } %>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="btn-group d-flex" role="group">
                            <a href="<%= basePath %>/projects/view/<%= project.id %>" class="btn btn-sm btn-info flex-fill">
                                <i class="fas fa-eye"></i> View
                            </a>
                            <a href="<%= basePath %>/projects/edit/<%= project.id %>" class="btn btn-sm btn-warning flex-fill">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <button type="button" class="btn btn-sm btn-danger flex-fill" 
                                    data-project-id="<%= project.id %>"
                                    data-project-title="<%= project.title %>"
                                    onclick="confirmDeleteProject(this)">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
        <% } else { %>
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No projects found. Click "Add New Project" to create one.
        </div>
        <% } %>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title"><i class="fas fa-exclamation-triangle"></i> Confirm Delete</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete the project "<strong id="projectTitle"></strong>"?</p>
                    <p class="text-danger mb-0"><i class="fas fa-warning"></i> This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form id="deleteForm" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete Project
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

<script>
    function confirmDeleteProject(button) {
        const projectId = button.getAttribute('data-project-id');
        const projectTitle = button.getAttribute('data-project-title');
        document.getElementById('projectTitle').textContent = projectTitle;
        document.getElementById('deleteForm').action = '<%= basePath %>/projects/delete/' + projectId;
        new bootstrap.Modal(document.getElementById('deleteModal')).show();
    }
</script>
